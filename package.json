{
  "name": "beintentional-web",
  "version": "1.0.0",
  "scripts": {
    "watch:tailwind": "postcss public/global.css -o public/global.min.css -w",
    "build:tailwind": "set NODE_ENV=production && postcss public/global.css -o public/index.min.css",
    "build": "npm run build:tailwind && rollup -c",
    "start": "sirv public",
    "serve": "serve public -p 80",
    "dev": "rollup -c -w && npm run watch:tailwind\""
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "rollup": "^2.3.4",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0"
  },
  "dependencies": {
    "autoprefixer": "^10.0.1",
    "postcss": "^8.1.1",
    "postcss-cli": "^8.1.0",
    "sirv-cli": "^1.0.0",
    "tailwindcss": "^1.8.12"
  }
}
